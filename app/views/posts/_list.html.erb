<div id="index">
<% @posts.each do |post| %><div class="thumb" id="post_<%= post.id %>">
    <% if post.photo.exists? then %>
      <%= image_tag(post.photo.url(:thumb), :alt => post.title, :class => 'pic') %>
	<%# render :partial => 'posts/ranking', :locals => { :post => post } %>
        <div class="overlay">
            <div class="actions">
                <%= link_to( image_tag("inspect.svg", :alt => "Inspect", :size => "60x60"),
                  post, :class => "inspect" ) %>
                <%= link_to( image_tag("vote.svg", :alt => "Vote", :size => "60x60"),
                  vote_path(post), :class => "vote" ) %>
            </div>
        </div>
    <% else %>
      Error! Post has no photo.
    <% end %>
  </div><% end %>
</div>
<%= paginate @posts %>
