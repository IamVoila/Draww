<!DOCTYPE html>
<html>
<head>
  <title>Draww</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield :head %>
</head>
<body class="<%= controller_name %> <%= action_name %>">
<header>
	<div id="header_nav">
		<div class="inner">
			<%= link_to content_tag(:span, "Draww.co"), root_path, :id => 'site_title' %>
			<nav class="user_actions">
				<% if current_user %>
					<%# TODO: Move "Edit Profile" to BIP on users/show %>
					<div class="msg">Hello, <span><%= current_user.username %></span></div>
					<%= link_to "New", new_post_path %>
					<%= link_to "My Images", name_user_path(current_user.username) %>
					<%= link_to "Profile", edit_user_path(current_user.id) %>
					<%= link_to "Logout", :logout %>
				<% else %>
					<%= link_to "Login / Sign up", login_path %>
				<% end %>
			</nav>
		</div>
	</div>
	<div id="flash">
		<%= render 'shared/flashes' %>
	</div>
</header>

<div role="main" id="view">
<%= yield %>
<div class="clearfix"></div>
</div>

<footer>
	<div class="inner">
		<div class="license">
			<a rel="license" href="http://creativecommons.org/licenses/by-sa/3.0/"><img alt="Creative Commons License" src="/images/cc.png" /></a><br />Except where otherwise noted, <span xmlns:dct="http://purl.org/dc/terms/" href="http://purl.org/dc/dcmitype/StillImage" rel="dct:type">content</span> is licensed under a <a rel="license" href="http://creativecommons.org/licenses/by-sa/3.0/">Creative Commons Attribution-ShareAlike 3.0 Unported License</a>.
		</div>
	</div>
</footer>
</body>
</html>
