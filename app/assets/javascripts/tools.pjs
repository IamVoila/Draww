///////////////////////////////////////////////////////////
// Variable Ellipse
///////////////////////////////////////////////////////////

class vEllipse extends draww_tool {
	void init() {
	}
	void draw() {
		variableEllipse(mouseX, mouseY, pmouseX, pmouseY);  
	}
	void variableEllipse(int x, int y, int px, int py)   
	{  
	  float speed = min(abs(x-px) + abs(y-py) , 60);  
	  stroke(speed);  
	  ellipse(x, y, speed, speed);  
	}
}

